<script src="https://www.google.com/recaptcha/enterprise.js?render=6LfsgxIgAAAAAOqVxBz0Kglg_ChOc-Fw4bdFZdQ6"></script>
<script>
    function onSubmit(token) {
        // document.getElementById("comment_recaptcha").setAttribute('value', token);
        document.getElementById("form_comment").submit();
    }
</script>

{{ form_start(form, {'attr': {'id': 'form_comment'}}) }}

    {% for flashMessage in app.session.flashbag.get('commentForm') %}
        <p style="color: red;">{{ flashMessage }}</p>
    {% endfor %}

    {{ form_widget(form) }}

    <button class="btn g-recaptcha"
        data-sitekey="6LfsgxIgAAAAAOqVxBz0Kglg_ChOc-Fw4bdFZdQ6"
        data-callback='onSubmit'
        data-action='submit'
        disabled
    >
        {{ button_label|default('Save') }}
    </button>
{{ form_end(form) }}