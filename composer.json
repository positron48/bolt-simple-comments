{
    "name": "positron48/bolt-simple-comments",
    "description": "It is bolt extension for simple comments system.",
    "type": "bolt-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Filatov",
            "email": "positron48@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "google/cloud-recaptcha-enterprise": "^1.2"
    },
    "require-dev": {
        "bolt/core": "^4.0 | ^5.0"
    },
    "autoload": {
        "psr-4": {
            "Positron48\\CommentExtension\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "entrypoint": "Positron48\\CommentExtension\\Extension"
    }
}
